<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/background_fill_white_corner">

    <LinearLayout
        android:id="@+id/bottom_sheet_back_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_close_24" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardBackgroundColor="#C2F8C5"
        app:cardCornerRadius="50dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/bottom_sheet_dialog_icon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/ic_baseline_wallet_24"
            app:tint="@color/green"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/bottom_sheet_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Payment"
        style="@style/font_20_black_medium"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/bottom_sheet_description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make payment using UPI, Debit Card, NetBanking etc."
        style="@style/font_12_gray_medium"
        android:lineHeight="20dp"/>

    <EditText
        android:id="@+id/bottom_sheet_phone_input"
        style="@style/font_16_black_medium"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="-10dp"
        android:background="@drawable/background_border_green"
        android:hint="Enter phone number"
        android:inputType="phone"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"/>

    <Button
        android:id="@+id/bottom_sheet_action_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/background_fill_green"
        android:text="Pay Now â‚¹299/-"
        android:textAllCaps="false"
        android:enabled="true"
        style="@style/font_16_white_medium"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"/>

</LinearLayout>